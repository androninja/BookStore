@model Book

@{
    if (Model == null)
    {
        <p>Book not found, Please Try agian</p>
    }
    else
    {
        <h3>Book Details</h3>
        <p>ID : @Model.Id</p>
        <p>Title : @Model.Title</p>
        <p>Author : @Model.Author</p>
        <p>Description : @Model.Description</p>
        <p>Language : @Model.Language</p>
    }
}
<a class="btn btn-primary" asp-controller="Books" asp-action="Index"> Back to List</a>